@model CrudMVCApp.Models.Item

@{
    ViewData["Title"] = "Editar Item";
}

<h1>Editar Item</h1>

<form asp-action="Edit" method="post">
    
    <input type="hidden" name="Id" value="@Model.Id" />  

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" id="Nome" name="Nome" value="@Model.Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" id="Descricao" name="Descricao" value="@Model.Descricao" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a href="@Url.Action("Index", "Item")" class="btn btn-secondary">Voltar</a>


