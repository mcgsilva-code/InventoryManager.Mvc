@model IEnumerable<CrudMVCApp.Models.Item>

@{
    ViewData["Title"] = "Lista de Itens";
}

<h1>Lista de Itens</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>
                    
                    <a href="@Url.Action("Edit", "Item", new { id = item.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", "Item", new { id = item.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Item")" class="btn btn-primary">Criar Novo Item</a>
